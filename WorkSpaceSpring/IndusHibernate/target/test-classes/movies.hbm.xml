<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.indus.training.orm.domain.Movie" table="mvoies">

		<id name="movieId" type="int" column="id">
			<generator class="native" />
		</id>

		<property name="movieName" column="title" type="string" />
		<property name="releaseDate" column="release_date" type="java.sql.Date" />

	</class>
</hibernate-mapping>